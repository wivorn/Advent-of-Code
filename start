import sys
import os
import requests

year = 2020
day = sys.argv[1]

try:
    os.mkdir(f'{year}/day{day}')
except OSError:
    print("Folder already exists")
else:
    print("Successfully created the directory")

url = f'https://adventofcode.com/{year}/day/{day}/input'
r = requests.get(url)

open(f'year/day{day}/input', 'wb').write(r.content)
